<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tutor_home"
    android:background="#F5F5F5"
    android:padding="30dp">

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Welcome, Tutor!"
        android:textColor="#2E7D32"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- E-Wallet Balance Card (Empty) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/ewalletCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:elevation="4dp"
        android:padding="16dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/welcomeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Removed ewalletBalance TextView -->
    </androidx.cardview.widget.CardView>

    <!-- Profile Management -->
    <Button
        android:id="@+id/btnEditProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Manage Profile"
        android:textStyle="bold"
        android:backgroundTint="#4CAF50"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/ewalletCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Set Availability -->
    <Button
        android:id="@+id/btnSetAvailability"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Set Availability"
        android:textStyle="bold"
        android:backgroundTint="#4CAF50"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/btnEditProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- My Schedule -->
    <Button
        android:id="@+id/btnScheduleSession"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="My Schedule"
        android:textStyle="bold"
        android:backgroundTint="#4CAF50"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/btnSetAvailability"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- View Booked Sessions -->
    <Button
        android:id="@+id/btnViewBookedSessions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Booked Sessions"
        android:textStyle="bold"
        android:backgroundTint="#43A047"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/btnScheduleSession"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Logout -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Logout"
        android:backgroundTint="#D32F2F"
        android:textColor="#ffffff"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btnViewBookedSessions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
