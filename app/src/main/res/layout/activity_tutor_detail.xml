<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_tutor_detail"
    android:padding="24dp"
    android:background="@color/white">

    <!-- Go Back Button -->
    <Button
        android:id="@+id/btnGoBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Back"
        android:textStyle="bold"
        android:backgroundTint="@color/dark"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/detailTutorName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/dark"
        app:layout_constraintTop_toBottomOf="@id/btnGoBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/detailTutorSpecialization"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Specialization"
        android:textSize="18sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/detailTutorName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/detailTutorRate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Rate"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/detailTutorSpecialization"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/detailTutorBio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bio"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/detailTutorRate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Book Now Button -->
    <Button
        android:id="@+id/btnBookNow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Book Now"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/green"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/detailTutorBio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
