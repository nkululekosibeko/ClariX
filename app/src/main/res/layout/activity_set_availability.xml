<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/pagebkg_main"
android:padding="24dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/container_background"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Availability"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/teal_blue"
        android:layout_marginBottom="24dp" />

    <EditText
        android:id="@+id/availability_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Date"
        android:focusable="false"
        android:inputType="none"
        android:background="@drawable/textedit_border"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/start_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Start Time"
        android:focusable="false"
        android:inputType="none"
        android:background="@drawable/textedit_border"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/end_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="End Time"
        android:focusable="false"
        android:inputType="none"
        android:background="@drawable/textedit_border"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />


    <Button
        android:id="@+id/btn_submit_availability"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Availability"
        android:background="@drawable/button_background"
        android:textColor="@android:color/white"
        android:padding="12dp" />
</LinearLayout>
</ScrollView>
