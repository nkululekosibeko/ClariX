<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pagebkg_main"
    tools:context=".activities.ReserveTermView">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/container_border"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/reserve_term_at"
            android:contentDescription="@string/headline_select_a_date_for_term_reservation"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/teal_blue"
            android:textSize="36sp"
            android:textStyle="bold" />

        <CalendarView
            android:id="@+id/calendarView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/container_background"
            android:contentDescription="@string/select_a_date_for_term_reservation" />

        <ListView
            android:id="@+id/availableTermsListView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="16dp"
            android:background="@drawable/container_background"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:contentDescription="@string/list_of_available_terms_for_reservation" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
